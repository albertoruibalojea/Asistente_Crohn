<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/casiBlanco"
    tools:context=".Home_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="755dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="113dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="-2dp">

        <RelativeLayout
            android:id="@+id/card_recommendations"
            android:layout_width="wrap_content"
            android:layout_height="96dp"
            android:layout_below="@+id/card_food"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="32dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/green_rectangle"
            android:baselineAligned="false">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="132dp"
                android:layout_marginTop="23dp"
                android:fontFamily="@font/bold"
                android:text="Recomendaciones"
                android:textColor="@color/casiBlanco"
                android:textSize="24sp"
                tools:ignore="TextContrastCheck"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="18dp"
                android:layout_marginTop="55dp"
                android:layout_marginEnd="36dp"
                android:layout_marginBottom="22dp"
                android:fontFamily="@font/bold"
                android:text="Accede a recursos médicos"
                android:textColor="@color/casiBlanco"
                android:textSize="15sp"
                tools:ignore="TextContrastCheck"></TextView>

            <ImageView
                android:layout_width="97dp"
                android:layout_height="85dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="18dp"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="214dp"
                android:layout_marginBottom="17dp"
                android:contentDescription="@string/state"
                android:src="@drawable/ic_numbered_list_2538271"
                tools:ignore="ImageContrastCheck">

            </ImageView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/card_food"
            android:layout_width="wrap_content"
            android:layout_height="96dp"
            android:layout_below="@+id/card_symptoms"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="32dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/violet_rectangle"
            android:baselineAligned="false">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="132dp"
                android:layout_marginTop="23dp"
                android:fontFamily="@font/bold"
                android:text="Alimentación"
                android:textColor="@color/casiBlanco"
                android:textSize="24sp"
                tools:ignore="TextContrastCheck"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="18dp"
                android:layout_marginTop="54dp"
                android:layout_marginEnd="70dp"
                android:layout_marginBottom="23dp"
                android:fontFamily="@font/bold"
                android:text="Registra lo que comes"
                android:textColor="@color/casiBlanco"
                android:textSize="15sp"
                tools:ignore="TextContrastCheck"></TextView>

            <ImageView
                android:layout_width="97dp"
                android:layout_height="85dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="18dp"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="214dp"
                android:layout_marginBottom="17dp"
                android:contentDescription="@string/state"
                android:src="@drawable/ic_crockery_1216068"
                tools:ignore="ImageContrastCheck">

            </ImageView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/card_state"
            android:layout_width="wrap_content"
            android:layout_height="96dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/blue_rectangle"
            android:baselineAligned="false">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="-1dp"
                android:layout_marginTop="23dp"
                android:layout_marginEnd="141dp"
                android:fontFamily="@font/bold"
                android:text="@string/estado"
                android:textColor="@color/casiBlanco"
                android:textSize="24sp"
                tools:ignore="TextContrastCheck"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="18dp"
                android:layout_marginTop="54dp"
                android:layout_marginEnd="56dp"
                android:layout_marginBottom="23dp"
                android:fontFamily="@font/bold"
                android:text="@string/conoce_tu_estado_actual"
                android:textColor="@color/casiBlanco"
                android:textSize="15sp"
                tools:ignore="TextContrastCheck"></TextView>

            <ImageView
                android:layout_width="97dp"
                android:layout_height="85dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="18dp"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="214dp"
                android:layout_marginBottom="17dp"
                android:contentDescription="@string/state"
                android:src="@drawable/ic_approve_1214354"
                tools:ignore="ImageContrastCheck">

            </ImageView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/card_symptoms"
            android:layout_width="wrap_content"
            android:layout_height="96dp"
            android:layout_below="@+id/card_state"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="32dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/purple_rectangle"
            android:baselineAligned="false">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="132dp"
                android:layout_marginTop="23dp"
                android:fontFamily="@font/bold"
                android:text="@string/sintomas"
                android:textColor="@color/casiBlanco"
                android:textSize="24sp"
                tools:ignore="TextContrastCheck"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="18dp"
                android:layout_marginTop="54dp"
                android:layout_marginEnd="158dp"
                android:layout_marginBottom="23dp"
                android:fontFamily="@font/bold"
