<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/rosa</item>
        <item name="colorPrimaryDark">@color/rosa_variante_1</item>
        <item name="colorAccent">@color/rosa</item>
        <item name= "android:fontFamily" > @font/regular </item>
    </style>

    <style name="CalendarViewCustom" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorAccent">@color/rosa</item>
        <item name="android:textColor">?attr/itemTextColor</item>
    </style>

    <style name="CalendarViewDateCustomText" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:textColor">?attr/itemTextColor</item>
        <item name="android:weekNumberColor">?attr/itemTextColor</item>
    </style>

    <style name="CalendarViewWeekCustomText" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:textColor">?attr/itemTextColor</item>
    </style>

    <style name="PreferenceStyle" parent="Preference.Category">
    <item name="android:textColor">?attr/itemTextColor</item>
</style>

    <style name="EditTextPreferenceStyle" parent="Preference.SwitchPreferenceCompat">
        <item name="android:textColor">?attr/itemTextColor</item>
    </style>

</resources>