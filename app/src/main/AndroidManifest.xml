<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aro.asistente_crohn">

    <application
        android:name=".DatabaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Asistente_Crohn">
        <activity
            android:name=".ui.SearchableActivity"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data android:name="android.app.searchable" android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".ui.HomeActivity"
            android:exported="false" />
        <activity
            android:name=".firsttime.FirstTime8NameActivity"
            android:exported="false" />
        <activity
            android:name=".firsttime.FirstTime7TermsActivity"
            android:exported="false" />
        <activity
            android:name=".firsttime.Activity1stTime"
            android:exported="false"
            android:parentActivityName=".firsttime.Activity1stTime" />
        <activity
            android:name=".ui.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>