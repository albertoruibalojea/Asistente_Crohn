<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/casiBlanco"
    tools:context=".Home_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="103dp">

        <ImageView
            android:id="@+id/logoView"
            android:layout_width="70dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="31dp"
            android:layout_marginEnd="227dp"
            android:layout_toStartOf="@+id/settingsView"
            android:contentDescription="@string/settings"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.907"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.057"
            tools:srcCompat="@drawable/logo" />

        <ImageView
            android:id="@+id/settingsView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="20dp"
            android:contentDescription="@string/settings"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.907"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.057"
            tools:srcCompat="@drawable/ic_setting_1881213" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="69dp"
            android:layout_marginEnd="211dp"
            android:fontFamily="@font/bold"
            android:text="@string/username"
            android:textColor="@color/casiNegro"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.243"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.081" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="118dp"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/bold"
            android:text="@string/hola"
            android:textColor="@color/casiNegro"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.248"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.044" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="726dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp">

        <RelativeLayout
            android:id="@+id/card_symptoms"
            android:layout_width="wrap_content"
            android:layout_height="96dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="32dp"
            android:layout_marginTop="187dp"
            android:layout_marginEnd="33dp"
            android:background="@drawable/purple_rectangle"
            android:baselineAligned="false">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="132dp"
                android:layout_marginTop="23dp"
                android:fontFamily="@font/bold"
                android:text="@string/sintomas"
                android:textColor="@color/casiBlanco"
                android:textSize="24sp"
                tools:ignore="TextContrastCheck"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="18dp"
                android:layout_marginTop="54dp"
                android:layout_marginEnd="139dp"
                android:layout_marginBottom="23dp"
                android:fontFamily="@font/bold"
                android:text="@string/registro"
                android:textColor="@color/casiBlanco"
                android:textSize="15sp"
                tools:ignore="TextContrastCheck"></TextView>

            <ImageView
                android:layout_width="97dp"
                android:layout_height="85dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="18dp"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="214dp"
                android:layout_marginBottom="17dp"
                android:contentDescription="@string/state"
                android:src="@drawable/ic_numbered_list_2538271"
                tools:ignore="ImageContrastCheck">

            </ImageView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/card_state"
            android:layout_width="wrap_content"
            android:layout_height="96dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="32dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="33dp"
            android:background="@drawable/blue_rectangle"
            android:baselineAligned="false">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="132dp"
                android:layout_marginTop="23dp"
                android:fontFamily="@font/bold"
                android:text="@string/estado"
                android:textColor="@color/casiBlanco"
                android:textSize="24sp"
                tools:ignore="TextContrastCheck"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="18dp"
                android:layout_marginTop="55dp"
                android:layout_marginEnd="37dp"
                android:layout_marginBottom="22dp"
                android:fontFamily="@font/bold"
                android:text="@string/conoce_tu_estado_actual"
                android:textColor="@color/casiBlanco"
                android:textSize="15sp"
                tools:ignore="TextContrastCheck"></TextView>

            <ImageView
                android:layout_width="97dp"
                android:layout_height="85dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="18dp"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="214dp"
                android:layout_marginBottom="17dp"
                android:contentDescription="@string/state"
                android:src="@drawable/ic_approve_1214354"
                tools:ignore="ImageContrastCheck">

            </ImageView>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>